<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="workshop3a24.GUI.AddtasksController">
    <VBox alignment="CENTER" spacing="10">
        <Label style="-fx-font-size: 24px;" text="Add Task" />        
        <TextField fx:id="tasknameField" promptText="Task Name" />
        
<ComboBox fx:id="statusComboBox" promptText="Status">
    <items>
        <FXCollections fx:factory="observableArrayList">
            <String fx:value="TODO" />
            <String fx:value="DOING" />
            <String fx:value="DONE" />
        </FXCollections>
    </items>
</ComboBox>
        <TextField fx:id="filesField" promptText="Files" />
        <TextField fx:id="descriptionField" promptText="Description" />
        <TextField fx:id="priorityField" promptText="Priority" />
        <TextField fx:id="estimatedTimeField" promptText="Estimated Time" />
        
        <Button fx:id="addTaskButton" onAction="#addTask" text="Add Task" />
    </VBox>
</AnchorPane>